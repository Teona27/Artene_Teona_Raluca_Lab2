@page "{id:int?}"
@model Artene_Teona_Raluca_Lab2.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category[0].CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CategoryData.Categories)
        {
            string selectedRow = "";
            if (item.ID == Model.CategoryID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                <td>
                    <a asp-page="./Index" asp-route-id="@item.ID">Select</a> |
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.CategoryID != 0 && Model.CategoryData.Books != null)
{
    <h3>Books in Categories</h3>
    <table class="table">
        @foreach (var category in Model.CategoryData.Categories)
        {
            string selectedRow = "";
            if (category.ID == Model.CategoryID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    <strong>@category.CategoryName</strong>
                    <br />
                    @{
                        foreach (var bc in category.BookCategories)
                        {
                            var book = bc.Book;
                            @book.Title @: @book.Author.FullName
                            <br />
                        }
                    }
                </td>
            </tr>
        }
    </table>
}


